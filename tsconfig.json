{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "outDir": "./dist/",
    "removeComments": true,
    "target": "ES6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@2021/*": ["src/2021/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
