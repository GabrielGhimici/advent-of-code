{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "outDir": "./dist/",
    "removeComments": true,
    "target": "ES6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*"]
}
